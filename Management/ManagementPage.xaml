<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnboardingSystem.Management.ManagementPage">
    <ContentPage.Content>
        <!-- Main Layout -->
        <VerticalStackLayout Spacing="10" Padding="20">

            <!-- Search and Action Buttons -->
            <HorizontalStackLayout>
                <SearchBar HorizontalOptions="StartAndExpand" Placeholder="Search..." />
                <Button Text="Filters" />
                <Button Text="Add staff" />
                <Button Text="Delete" />
            </HorizontalStackLayout>
            

            <!-- Table Headers (Column Labels) -->
            <!-- ColumnDefinitions="Auto,*,*,*,*,*,*,*,*" -->
            <Grid x:Name="HeaderGrid" Padding="10" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" />

            <!-- Staff Details Grid -->
            <CollectionView x:Name="GridCollection"/>
            <!-- Pagination -->
            <HorizontalStackLayout Margin="12, 0, 12, 0" HorizontalOptions="Center" VerticalOptions="Center">
                <Button Text="Prev" />
                <Label VerticalOptions="Center" Margin="8,0,8,0" Text="1-5 of 23" HorizontalOptions="CenterAndExpand" />
                <Button Text="Next" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
