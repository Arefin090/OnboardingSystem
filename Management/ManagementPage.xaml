<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnboardingSystem.Management.ManagementPage">
    <ContentPage.Content>
        <!-- Main Layout -->
        <VerticalStackLayout Spacing="10" Padding="20">

            <!-- Search and Action Buttons -->
            <HorizontalStackLayout>
                <SearchBar HorizontalOptions="StartAndExpand" Placeholder="Search..." />
                <Button Text="Filters" />
                <Button Text="Add staff" />
                <Button Text="Delete" />
            </HorizontalStackLayout>
            

            <!-- Table Headers (Column Labels) -->
            <!-- ColumnDefinitions="Auto,*,*,*,*,*,*,*,*" -->
            <Grid x:Name="HeaderGrid" Padding="10" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" />

            <!-- Staff Details Grid -->
            <CollectionView ItemsSource="{Binding StaffMembers}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,*,*,*,*,*,*,*,*">
                            <Label Text="{Binding [StaffId]}" Margin="2,0,2,0" Grid.Column="1" />
                            <Label Text="{Binding [Name]}" Margin="2,0,2,0" Grid.Column="2" />
                            <Label Text="{Binding [Role]}" Margin="2,0,2,0" Grid.Column="3" />
                            <Label Text="{Binding [Phone]}" Margin="2,0,2,0" Grid.Column="4" />
                            <!-- <Label Text="{Binding Address}" Margin="2,0,2,0" Grid.Column="5" /> -->
                            <!-- <Label Text="{Binding Branch}" Margin="2,0,2,0" Grid.Column="6" /> -->
                            <!-- <Label Text="{Binding Address}" Margin="2,0,2,0" Grid.Column="7" /> -->
                            <!-- <Label Text="{Binding Branch}" Margin="2,0,2,0" Grid.Column="8" /> -->
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Pagination -->
            <HorizontalStackLayout Margin="12, 0, 12, 0">
                <Button Text="Previous" />
                <Label Text="1-5 of 23" HorizontalOptions="CenterAndExpand" />
                <Button Text="Next" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
