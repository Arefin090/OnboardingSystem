<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnboardingSystem.UserListPage"
             Title=""
             Shell.NavBarIsVisible="False"> <!--Disable top bar-->

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <FlexLayout>
                <SearchBar FlexLayout.Grow="1" TextChanged="OnSearchBarTextChanged" HorizontalOptions="Start" Placeholder="Search..." Margin="10,0" />
                <Button Clicked="OnAddUserClicked" Text="Add user" Margin="10,0" Style="{StaticResource Interactive_Button}"/>
                <Button Clicked="OnDeleteUserClicked" Text="Delete" Margin="10,0" Style="{StaticResource Interactive_Button}"/>
            </FlexLayout>

            <Grid x:Name="HeaderGrid" Padding="10" />
            <BoxView HeightRequest="1" BackgroundColor="Gray" HorizontalOptions="Fill" />

            <CollectionView x:Name="GridCollection"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>