<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnboardingSystem.LoginPage"
             Title=""
             Shell.NavBarIsVisible="False"> <!--Disable top bar-->

    <Grid> <!--Grid, 1 row, 2 columns-->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <!--row 1-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".30*"/> <!--column 1-->
            <ColumnDefinition Width=".70*"/> <!--column 2-->
        </Grid.ColumnDefinitions>

        <!--row 1, column 1-->
        <BoxView Color="Black" />

<!--
        <ItemGroup>
            <MauiIcon Include="logo.png" />
        </ItemGroup>
-->
        <!--<WebView Source="logo.png"></WebView>-->
        <Image
            Source="logo.png"
            Aspect="AspectFit"
        />

        <!--row 1, column 2-->
        <BoxView
            Color="White" 
            Grid.Column="1"
        />
        <Grid Grid.Column="1" Margin="5"> <!--Grid, 6 rows, 1 column-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!--row 1-->
                <RowDefinition Height="Auto"/> <!--row 2-->
                <RowDefinition Height="Auto"/> <!--row 3-->
                <RowDefinition Height="Auto"/> <!--row 4-->
                <RowDefinition Height="Auto"/> <!--row 5-->
                <RowDefinition Height="Auto"/> <!--row 6-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/> <!--column 1-->
            </Grid.ColumnDefinitions>

            <StackLayout Padding="60,0"> <!--padding-->
                <!--row 1, column 1-->
                <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />
                <Label LineBreakMode="WordWrap" HorizontalOptions="Center" Margin="0,50">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Login to Management System" TextColor="Black" FontAttributes="Bold" FontSize="20"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!--row 2, column 1-->
                <Label
                    Text="Username"
                    Grid.Row="1"
                    Margin="0,20,0,0"
                    TextColor="Black"
                />

                <!--row 3, column 1-->
                <Border Stroke="Black" StrokeThickness="2">
                    <Entry
                        Placeholder="Enter your username"
                        Grid.Row="2"
                        TextColor="Black"
                    />
                </Border>

                <!--row 4, column 1-->
                <Label
                    Text="Password"
                    Grid.Row="3"
                    Margin="0,20,0,0"
                    TextColor="Black"
                />

                <!--row 5, column 1-->
                <Border Stroke="Black" StrokeThickness="2">
                    <Entry
                        Placeholder="Enter your password"
                        Grid.Row="4"
                        IsPassword="True"
                        TextColor="Black"
                    />
                </Border>

                <!--row 6, column 1-->
                <Button
                    Text="Login" 
                    HorizontalOptions="Fill"
                    Clicked="ToMain"
                    Grid.Row="5"
                    Margin="0,20,0,0"
                />
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>